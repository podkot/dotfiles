#!/usr/bin/env bash

if [[ $IS_MAC == 1 ]]; then
    source $DOTFILES/bin/setup/mac.sh
    source $DOTFILES/bin/setup/osx.sh
else
    source $DOTFILES/bin/setup/linux.sh
fi

if [[ $IS_DESKTOP == 1 ]]; then
    source $DOTFILES/bin/setup/desktop.sh
fi

source $DOTFILES/bin/setup/common.sh

source $DOTFILES/bin/dotfiles-update

